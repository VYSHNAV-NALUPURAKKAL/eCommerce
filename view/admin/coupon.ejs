    <script>

      $(document).ready(function () {
        document.getElementById('submitCoupon').onclick = async function (event) {
          event.preventDefault(); 
          const isValid = validateForm();
          if (isValid) {
            const couponName = document.getElementById('couponName').value;
            const couponCode = document.getElementById('couponCode').value;
            const discount = document.getElementById('discount').value;
            const criteriaAmount = document.getElementById('criteriaAmount').value;
            const activationDate = document.getElementById('activationDate').value;
            const expiryDate = document.getElementById('expiryDate').value;

            try {
              const response = await fetch("/admin/addCoupon", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json"
                },
                body: JSON.stringify({ couponCode, couponName, discount, criteriaAmount, activationDate, expiryDate })
              });

              const data = await response.json();
              console.log("data from frontend:", data);
              if (data.success === false) {
                console.log("inside of the if :", data.message);
                showToast(data.message);
              } else {
                event.target.closest('form').submit();
              }
            } catch (error) {
              console.error("error on frontend post method:", error);
            }
          }
        };
      })

      function generateCode() {
        let letters = "abcdefghijklmnopqrstuvwxyz";
        let numbers = "1234567890";
        let randomCode = '';

        for (let i = 0; i < 4; i++) {
          randomCode += letters.charAt(Math.floor(Math.random() * letters.length));
        }

        for (let i = 0; i < 4; i++) {
          randomCode += numbers.charAt(Math.floor(Math.random() * numbers.length));
        }

        return randomCode;
      }

      async function couponCode1() {
        let code = await generateCode()
        console.log(
          "code in the coupen code :", code
        );
        let couponInput = document.getElementById("couponCode")
        console.log("coupon input :", couponInput);
        if (couponInput) {
          couponInput.value = code.toUpperCase();
        }
      }


      function updateStatus(id, button) {
        const couponAction = button.innerText;
        const couponId = id;
        fetch("/admin/updateCouponStatus", {
          method: "PATCH",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ couponId, couponAction })
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success == true) {
              $("#tableContainer").load("/admin/coupon #tableContainer");
            }
            console.log("dataaa :", data);
          })
      }

      function deleteCoupon(itemId) {
        const couponId = itemId;
        fetch("/admin/deleteCoupon", {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ couponId })
        })
          .then((response) => response.json())
          .then((data) => {
            console.log("data :", data);
            if (data.success == true) {

              $("#tableContainer").load('/admin/coupon #tableContainer');
              document.getElementById(coup).style.display = "none";
            }
          })
          .catch((error) => {
            console.log("error on frontend :", error);
          })
      }


      function validateForm() {

        const name = document.getElementById("couponName").value.trim()
        const couponCode = document.getElementById("couponCode").value.trim()
        const discount = document.getElementById("discount").value.trim()
        const criteria = document.getElementById('criteriaAmount').value.trim()
        const activationDate = document.getElementById("activationDate").value.trim()
        const expiryDate = document.getElementById("expiryDate").value.trim()

        console.log("name :", name, "couponCode :", couponCode, "discount :", discount, "criteria :", criteria, 'activationDate :', activationDate, "expiry date :", expiryDate);
        let isValid = true;
        //===============NAME ERROR====================================
        if (name === "" || name.match(/^\s+$/)) {
          const nameError = document.getElementById("nameError");
          nameError.textContent = "Please enter a valid name!";
          isValid = false;
        } else if (/\d/.test(name)) {
          const nameError = document.getElementById("nameError");
          nameError.textContent = "Name should not contain numbers.";
          isValid = false;
        } else {
          document.getElementById("nameError").textContent = "";
        }
        //==============================COUPON ERROR======================= 
        if (couponCode.length !== 8) {
          const codeError = document.getElementById("codeError");
          codeError.textContent = "Coupon code should be 8 characters long.";
          isValid = false;
        } else if (!(/[A-Z]{4}/.test(couponCode) && /\d{4}/.test(couponCode))) {
          const codeError = document.getElementById("codeError");
          codeError.textContent = "Please provide 4 capital letters and 4 numbers.";
          isValid = false;
        } else {
          document.getElementById("codeError").textContent = "";
        }
//===================DISCOUNT ERRORR=========================

        if(discount ===""){
          const discountError = document.getElementById("discountError")
          discountError.textContent ="Please enter a discount value";
          isValid=false;
        }else if(Number(discount)<0){
          const discountError = document.getElementById("discountError");
          discountError.textContent = "Discount cannot be negative value!";
          isValid = false;
        }else if(discount.toString().startsWith("0")){
          const discountError = document.getElementById("discountError");
          discountError.textContent = "Discount value should not start with 0 ";
          isValid = false;
        }else{
          document.getElementById("discountError").textContent = "";
        }
//================CRITERIA ERROR============================
        if(criteria ===""){
          const criteriaError = document.getElementById("criteriaError")
          criteriaError ="Please enter a criteria value";
          isValid=false;
        }else if(Number(criteria)<0){
          const criteriaError = document.getElementById("criteriaError");
          criteriaError.textContent = "criteria cannot be negative value!";
          isValid = false;
        }else if(criteria.toString().startsWith("0")){
          const criteriaError = document.getElementById("criteriaError");
          criteriaError.textContent = "criteria value should not start with 0 ";
          isValid = false;
        }else{
          document.getElementById("criteriaError").textContent = "";
        }
        
        const activationDateObj = new Date(activationDate);
        const expiryDateObj = new Date(expiryDate);

        if(expiryDateObj <= activationDateObj ){
          const dateError = document.getElementById("dateError");
          dateError.textContent = "expiry date cannot be before activation date"
          isValid = false;
        }else{
          document.getElementById("dateError").textContent = "";
        }

        if (!isValid) {
          return false
        }
        return isValid;
      }

      //=============SUBMIT BUTTON================
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("couponForm");

        form.addEventListener("submit", function (event) {
          event.preventDefault();

          const isValid = validateForm();
          if (isValid) {
            form.submit();
          }
        });
      });




    </script>
