        </div>
        <div class="col text-end">
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add
            coupon</button>
        </div>
      </div>
      <!-- Coupon Table -->
      <table class="table mt-4">
        <thead>
          <tr>
            <th scope="col">#
            </th>
            <th scope="col">Name</th>
            <th scope="col">Coupon Code</th>
            <th scope="col">Discount Amount</th>
            <th scope="col">Criteria Amount</th>
            <th scope="col">Activation date</th>
            <th scope="col">Expiry Date</th>
            <th scope="col">Used</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Coupon items will be dynamically added here -->

          <% coupon.forEach((item,index)=>{ %>
            <tr>
              <th scope="row">
                <%= index + 1 %>
              </th>
              <td>
                <%= item.name %>
              </td>
              <td>
                <%= item.couponCode %>
              </td>
              <td>
                ₹<%= item.discount %>
              </td>
              <td>
                ₹<%= item.criteriaAmount %>
              </td>
              <td>
                <%= item.activationDate %>
              </td>
              <td>
                <%= item.expiryDate %>
              </td>
              <td>
                <%= item.usedUsers %>
              </td>
              <td>
                <% if (item.is_blocked) { %>
                  <button class="btn btn-sm btn-success unblock-btn" id="action"
                    onclick="updateStatus('<%= item._id %>',this)">Unblock</button>
                  <% } else { %>
                    <button class="btn btn-sm btn-danger block-btn" id="action"
                      onclick="updateStatus('<%= item._id %>',this)">Block</button>
                    <% } %>
              </td>
              <td>
                <button class="btn btn-sm btn-danger" onclick="deleteCoupon('<%= item._id %>')">Delete</button>
              </td>
            </tr>
        </tbody>
        <% }) %>
      </table>
