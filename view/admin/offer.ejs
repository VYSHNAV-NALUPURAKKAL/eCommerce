    <div class="container mt-5" id="tableContainer">
      <div class="row">
        <div class="col">
          <h1>Offers</h1>
        </div>
        <div class="col text-end">
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Offer</button>
        </div>
      </div>
      <!-- Offer Table -->
      <% if (offer.length > 0) { %>
        <table class="table mt-4">
          <thead>
            <tr>
              <th scope="col">Sl.</th>
              <th scope="col">Name</th>
              <th scope="col">Discount</th>
              <th scope="col">Activation date</th>
              <th scope="col">Expiry Date</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <!-- offer items will be dynamically added here -->
            <% for (let i = 0; i < offer.length; i++) { %>
              <tr>
                <th scope="row"><%= i + 1 %></th>
                <td><%= offer[i].name %></td>
                <td><%= offer[i].discount %></td>
                <td><%= moment(offer[i].activationDate).format('DD/MM/YYYY') %></td>
                <td><%= moment(offer[i].expiryDate).format('DD/MM/YYYY') %></td>
                <td>
                  <button class="btn btn-sm btn-danger" onclick="deleteOffer('<%= offer[i]._id %>')">Delete</button>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      <% } else { %>
        <div class="text-center">
          <p><b>No offers available</b></p>
        </div>
      <% } %>
    </div>
    
