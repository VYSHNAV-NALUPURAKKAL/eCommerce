    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">ADD OFFER</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="offerForm">
              <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="couponName">
                <span id="nameError" class="text-danger"></span>
              </div>
              <div class="mb-3">
                <label class="form-label">Discount</label>
                <input type="number" class="form-control" id="discount">
                <span id="discountError" class="text-danger"></span>
              </div>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label">Activation Date</label>
                  <input type="date" class="form-control" id="activationDate">
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label">Expiry Date</label>
                  <input type="date" class="form-control" id="expiryDate">
                </div>
                <span id="dateError" class="text-danger"></span>
              </div>

              <button type="submit" class="btn btn-primary" id="submitOffer">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"></script>


    <script>

      $(document).ready(function () {
        document.getElementById("submitOffer").onclick = async function (event) {
          event.preventDefault();
          const isValid = validateForm();
          if (isValid) {
            const name = document.getElementById("couponName").value.trim();
            const discount = document.getElementById("discount").value.trim();
            const activationDate = document.getElementById("activationDate").value.trim();
            const expiryDate = document.getElementById("expiryDate").value.trim();
            console.log("name:", name, "discount:", discount, "activation date:", activationDate, "expiry date:", expiryDate);

            try {
              const response = await fetch("/admin/addOffer", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json"
                },
                body: JSON.stringify({ name, discount, activationDate, expiryDate })
              });
              const data = await response.json();
              console.log("data from frontend:", data);
              if (data.status === true) {
                event.target.closest('form').submit();
              } else {
                Swal.fire({
                  text: "Oops, another offer exists with the same name",
                  icon: "error"
                });
              }
            } catch (error) {
              console.error("error on add offer:", error);
            }
          }
        };
      });




      function deleteOffer(itemId) {
        const offerId = itemId;
        fetch("/admin/deleteOffer", {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({ offerId })
        })
          .then((response) => response.json())
          .then((data) => {
            console.log("data :", data);
            if (data.success == true) {

              $("#tableContainer").load('/admin/offer #tableContainer');
              document.getElementById(coup).style.display = "none";
            }
          })
          .catch((error) => {
            console.log("error on frontend :", error);
          })
      }


      function validateForm() {

        const name = document.getElementById("couponName").value.trim()
        const discount = document.getElementById("discount").value.trim()
        const activationDate = document.getElementById("activationDate").value.trim()
        const expiryDate = document.getElementById("expiryDate").value.trim()

        console.log("name :", name, "discount :", discount, 'activationDate :', activationDate, "expiry date :", expiryDate);
        let isValid = true;
        //===============NAME ERROR====================================
        if (name === "" || name.match(/^\s+$/)) {
          const nameError = document.getElementById("nameError");
          nameError.textContent = "Please enter a valid name!";
          isValid = false;
        } else if (/\d/.test(name)) {
          const nameError = document.getElementById("nameError");
          nameError.textContent = "Name should not contain numbers.";
          isValid = false;
        } else {
          document.getElementById("nameError").textContent = "";
        }
        //===================DISCOUNT ERRORR=========================

        if (discount === "") {
          const discountError = document.getElementById("discountError")
          discountError.textContent = "Please enter a discount value";
          isValid = false;
        } else if (Number(discount) < 0) {
          const discountError = document.getElementById("discountError");
          discountError.textContent = "Discount cannot be negative value!";
          isValid = false;
        } else if (discount.toString().startsWith("0")) {
          const discountError = document.getElementById("discountError");
          discountError.textContent = "Discount value should not start with 0 ";
          isValid = false;
        } else {
          document.getElementById("discountError").textContent = "";
        }
        //=================Activation date and Expiry date Error========================        
        const activationDateObj = new Date(activationDate);
        const expiryDateObj = new Date(expiryDate);

        if (expiryDateObj <= activationDateObj) {
          const dateError = document.getElementById("dateError");
          dateError.textContent = "expiry date cannot be before activation date"
          isValid = false;
        } else if (activationDate == '' || expiryDate == '') {
          const dateError = document.getElementById("dateError");
          dateError.textContent = "please provide a date!"
          isValid = false;
        } else {
          document.getElementById("dateError").textContent = "";
        }

        if (!isValid) {
          return false
        }
        return isValid;
      }

      //=============SUBMIT BUTTON================
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("offerForm");

        form.addEventListener("submit", function (event) {
          event.preventDefault();

          const isValid = validateForm();
          if (isValid) {
            form.submit();
          }
        });
      });




    </script>
