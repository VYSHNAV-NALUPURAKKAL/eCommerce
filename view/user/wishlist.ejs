    <div class="site-section">
        <div class="container">
          <div class="row mb-5">
            <div class="col-md-12">
              <div class="site-blocks-table" id="reloadDiv">
                <table class="table table-bordered">
                    <%console.log("wishlist data :",wishlistData)%>
                    <% if(wishlistData == null || wishlistData.length ==0|| wishlist ===null) {%>
                    <div class="col-md-6">
                      <a class="btn btn-outline-primary btn-sm btn-block" href="/shop">
                        Wishlist is Empty
                      </a>
                    </div>
                    <%} else { %>
                      <thead>
                        <tr>
                          <th class="product-thumbnail">Image</th>
                          <th class="product-name">Product</th>
                          <th class="product-price">Price</th>
                          <th class="product-addToCart"></th>
                          <th class="product-remove">Remove</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% wishlistData.forEach((item,i)=>{ %>
                          <tr id="pro<%=i%>">
                            <td class="product-thumbnail">
                              <% if(item.productId && item.productId.images && item.productId.images.length> 0) {%>
                                <img src="public/adminAssets/product-images/<%= item.productId?.images[0] %>" alt="Image"
                                  class="img-fluid" />
                                <% } %>
                            </td>
                            <td class="product-name">
                              <h2 class="h5 text-black">
                                <%= item.productId.name %>
                              </h2>
                            </td>
                            <td>
                              <%= item.productId.price %>
                            </td>
                            <td >
                              <%= console.log('product  :',item.productId._id)%>
                              <button class="btn btn-primary" onclick="postToCart('<%= item.productId._id %>')">Add To Cart
                            </td>
                            <td>
                              <a onclick="addToWishlist('<%= item.productId._id%>','pro<%=i%>')"
                                class="btn btn-primary btn-sm">X</a>
                            </td>
                          </tr>
                          <% }) %>
                      </tbody>
                </table>
              </div>
            </div>
          </div>
  
          
          <div class="row"></div>
          <div class="col-md-6 pl-5">
            <div class="row justify-content-end">
