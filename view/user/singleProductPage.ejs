    <script>
      function postToCart(productId) {
        fetch("/postToCart", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ productId }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.value === 1) {
              swal({
                title: "Sorry",
                text: "Product is already added to the cart",
                icon: "warning",
                buttons: false, // Remove the "OK" button
                dangerMode: true,
                timer: 1000, // Close the alert after 3 seconds
              });
            } else if (data.value === 0) {
              swal({
                title: "",
                text: "Add to cart success!!",
                icon: "success",
                timer:2000
              });
            }
            console.log(data);
          })
          .catch((err) => {
            console.log(err);
          });
      }
    </script>

